{
  "private": true,
  "name": "bip-siteeditor",
  "version": "1.0.0",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "max-len": ["error", 88, 2]
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx-source": "^7.12.13",
    "babel-plugin-transform-hook-names": "^1.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.0.0",
    "eslint": "^7.20.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.5",
    "sass": "^1.32.7",
    "sass-loader": "^10.1.1",
    "sirv-cli": "1.0.11"
  },
  "dependencies": {
    "hooked-head": "^0.4.1",
    "nanoid": "^3.1.20",
    "preact": "^10.5.12",
    "preact-feather": "^4.1.0",
    "preact-render-to-string": "^5.1.12",
    "redux-zero": "^5.1.7",
    "spectre.css": "^0.5.9"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
