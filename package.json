{
  "private": true,
  "name": "bip-siteeditor",
  "version": "1.0.0",
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Jarek Zgoda",
    "url": "https://github.com/zgoda"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zgoda/bip-siteeditor.git"
  },
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --no-sw",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "max-len": [
        "error",
        88,
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx-source": "^7.16.0",
    "babel-plugin-transform-hook-names": "^1.0.2",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "preact-cli": "^3.3.1",
    "sass": "^1.43.4",
    "sass-loader": "^10.1.1",
    "sirv-cli": "1.0.14"
  },
  "dependencies": {
    "hoofd": "^1.4.0",
    "preact": "^10.5.15",
    "preact-feather": "^4.2.1",
    "preact-render-to-string": "^5.1.19",
    "redux-zero": "^5.1.7",
    "spectre.css": "^0.5.9",
    "uid": "^2.0.0"
  }
}
